# Path {{{
export LESS=' -R '

# Better directory navigation 
# Prepend cd to directory names automatically
shopt -s autocd 2> /dev/null
# Correct spelling errors during tab-completion
shopt -s dirspell 2> /dev/null
# Correct spelling errors in arguments supplied to cd
shopt -s cdspell 2> /dev/null


# Better navigation
shopt -s cdable_vars
shopt -s dirspell
alias home='cd ~'

# Easier profile editing
alias editprofile='vi ~/.profile'
alias sourceprofile='source ~/.profile'
alias commit_profile='git add ~/.cgh/dotfiles/profile && git ci -m'

export cgh=~/.cgh
export syn=~/workspace/hpft
export dotfiles=$cgh/dotfiles
export CLICOLOR=1
export LSCOLORS=ExFxCxDxBxegedabagacad
export CGH_HOME=~/bin
export GOPATH=/Users/cgh/workspace/gocode

PATH=/usr/local/bin:/usr/bin:/bin:/usr/sbin:/sbin:/opt/X11/bin:$CGH_HOME:/$GOPATH/bin:
# }}}

# History {{{
export HISTFILESIZE=500000
export HISTSIZE=10000
export HISTCONTROL="erasedups:ignoreboth"
# }}}

# OSX Shortcuts {{{
alias show-hidden-files='defaults write com.apple.finder AppleShowAllFiles TRUE && killall Finder'
alias hide-hidden-files='defaults write com.apple.finder AppleShowAllFiles FALSE && killall Finder'
# }}}

# Aliases {{{
alias ll='ls -la'
alias webshare='python -m SimpleHTTPServer'
alias workspace='cd ~/Documents/workspace'
# }}}

# k8s Shortcuts {{{
alias k=kubectl                   
alias ka='kubectl apply'                                                       
alias kaf='kubectl apply -f'          
alias kg='kubectl get'
alias kc='kubectl config'
alias kd='kubectl describe'                                                    
alias kga='kubectl get all --all-namespaces'
alias kge='kubectl get events'

#k8s Bash completion
source <(kubectl completion bash) 
source <(kubectl completion bash | sed 's/kubectl/k/g')

#tekton completion 
source <(tkn completion bash)


# }}}

# Shortcuts {{{
alias PS1="PS1='\W $ '"
alias g="git"
alias h="history"
alias l="clear"
alias ls='ls -G'
alias cp_dir="pwd | pbcopy"
alias add_key="/Volumes/ChrisHedley/add_key"

goto() {
   . ~/bin/cd_to_project $@ 
}
# }}}

